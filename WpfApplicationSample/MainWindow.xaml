<Window x:Class="WpfApplicationSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vmodel="clr-namespace:WpfApplicationSample.ViewModels"
        xmlns:cmd="clr-namespace:WpfApplicationSample.ViewModels.Commands"
        Title="MainWindow" Height="350" Width="525">
    
    <Window.Resources>
        <vmodel:ViewModelBase x:Key="viewmodel"></vmodel:ViewModelBase>
        <vmodel:Person x:Key="person"></vmodel:Person>
    </Window.Resources>
    <Grid DataContext="{Binding Source={StaticResource person}}">
        <StackPanel  HorizontalAlignment="Left">
            <TextBlock Text="{Binding Name, Mode=TwoWay}"></TextBlock>
            <TextBox Text="{Binding Name, Mode=TwoWay}"></TextBox>
            <Button  Content="Simple Commmand"
            Command="{Binding  Source={StaticResource viewmodel}, Path=SimpleButtonClickCommand}"></Button>
            <Button  Content="Simple Commmand With Param"
            Command="{Binding  Source={StaticResource viewmodel}, Path=SimpleButtonClickCommandWithParam}"
                     CommandParameter="{Binding Name}"></Button>
        </StackPanel>
        
        
    </Grid>
</Window>
